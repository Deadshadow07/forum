= form_for @user do |f|
  =error_messages_for @user
  =f.label :username
  =f.text_field :username
  =f.label :email
  =f.email_field :email
  =f.label :password
  =f.password_field :password
  =f.label :password_confirmation
  =f.password_field :password_confirmation
  .form-actions
    =f.submit nil,class: 'btn btn-primary'